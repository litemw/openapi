{
  "name": "@litemw/openapi",
  "version": "0.2.0",
  "author": "VladDotH",
  "license": "MIT",
  "description": "Openapi meta middlewares for litemw router",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/litemw/openapi.git"
  },
  "bugs": {
    "url": "https://github.com/litemw/openapi/issues"
  },
  "homepage": "https://github.com/litemw/openapi#readme",
  "scripts": {
    "build:dts": "tsc --build tsconfig.build.json",
    "build:cjs": "bun build lib/index.ts --outfile=dist/index.js --packages external --format cjs\n",
    "build:esm": "bun build lib/index.ts --outfile=dist/index.mjs --packages external --format esm",
    "build": "bun run build.ts",
    "postbuild": "rimraf tsconfig.types.tsbuildinfo",
    "lint": "bun run eslint lib/**/*.ts",
    "lint:fix": "bun run lint --fix"
  },
  "dependencies": {
    "esbuild": "^0.24.2",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/bun": "^1.1.17",
    "@types/joi": "^17.2.3",
    "@types/koa": "^2.13.8",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-router": "^7.4.8",
    "@types/koa__multer": "^2.0.7",
    "@types/lodash": "^4.17.15",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui": "^3.52.4",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "openapi3-ts": "4.4.0",
    "prettier": "^2.8.8",
    "supertest": "^7.0.0",
    "tsafe": "^1.8.5",
    "typescript": "^5.1.3"
  },
  "peerDependencies": {
    "@litemw/router": "^0.1.8",
    "@litemw/middlewares": "^0.1.8",
    "openapi3-ts": "4.4.0"
  },
  "peerDependenciesMeta": {
    "@litemw/router": {
      "optional": false
    },
    "@litemw/middlewares": {
      "optional": false
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "module": "dist/index.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.js",
    "types": "./dist/index.d.ts"
  }
}
